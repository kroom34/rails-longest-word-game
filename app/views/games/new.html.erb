<form action="score" data-turbo="false">
  <h1>New game</h1>
  <div>
    <ul class="list">
      <% @letters.each do |letter| %>
      <li class="letters"><%= letter %></li>
      <% end %>
    </ul>
  </div>
  <label class="form-label">What is the longest word you can find?</label>
  <div>
    <input type="text" name="word_valid">
    <input type="submit" class="btn btn-primary" value="Valider!">
  </div>
</form>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
